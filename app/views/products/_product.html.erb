<% cache product do %>
  <div class="col-xs-6 col-sm-6 col-lg-3 products-items">

    <%= image_tag(product.image_url, class: "img-fluid product-img") unless product.image_url.nil? %>

    <h2><%= product.name %></h2>
    <strong><p><%= product.description %></p></strong>
    <p><%= product.colour %></p>
    <p><%= product.price %> â‚¬</p>
    <%= link_to 'Show', product %>
    <%= link_to 'Edit', edit_product_path(product) %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div><!-- /col -->
<% end %>
